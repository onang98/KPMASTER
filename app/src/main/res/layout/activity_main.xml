<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroud"
    android:layout_height="match_parent"
    tools:context="com.example.KP.aduan_masyarakat.MainActivity">

 <android.support.v7.widget.LinearLayoutCompat
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:gravity="center"
     android:orientation="vertical" >
     >


     <TextView
         android:id="@+id/textView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Selamat Datang di pelayanan Mobile"
         android:textColor="#000000"
         android:textSize="18sp"
         android:textStyle="bold"
         android:layout_marginBottom="20dp"/>

     <ImageView
         android:id="@+id/imageView"
         android:layout_width="match_parent"
         android:layout_height="250dp"
         android:layout_marginBottom="20dp"
         app:srcCompat="@drawable/logokampus" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Login Sebagai"
         android:textColor="#000000"
         android:textSize="14sp"
         android:textStyle="bold"
         android:layout_marginBottom="10dp"/>

     <Button
         android:id="@+id/btn_perangkat_desa"
         android:layout_width="300dp"
         android:text="Perangkat desa"
         android:onClick="masukpd"
         android:layout_height="wrap_content"
         android:background="@drawable/roundedbutton"
         android:layout_marginBottom="15dp"/>
     <Button
         android:id="@+id/btn_masyarakat"
         android:layout_width="300dp"
         android:text="Masyarakat"
         android:layout_height="wrap_content"
         android:background="@drawable/roundedbutton"/>


 </android.support.v7.widget.LinearLayoutCompat>
  /
</LinearLayout>
